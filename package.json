{
  "name": "playmo",
  "version": "0.1.0",
  "description": "Add missing keyboard shortcuts to various streaming services",
  "main": "src/index.js",
  "repository": "https://github.com/ulken/playmo",
  "author": "Oskar LÃ¶fgren <islander.abroad@gmail.com>",
  "license": "MIT",
  "scripts": {
    "bundle": "parcel build src/{index,background}.js",
    "copy": "mkdir -p dist/ && cp manifest.json dist/",
    "build": "yarn copy && yarn bundle",
    "package": "yarn build && crx pack --zip-output playmo.zip --output playmo.crx dist/",
    "watch": "parcel watch src/{index,background}.js",
    "clean": "rm -rf dist/",
    "bump": "bump *.json --yes"
  },
  "browserslist": [
    "Chrome >= 62"
  ],
  "devDependencies": {
    "bump-cli": "^1.1.3",
    "crx": "^5.0.0",
    "debug": "^4.1.1",
    "parcel-bundler": "^1.11.0"
  }
}
